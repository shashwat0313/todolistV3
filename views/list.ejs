<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>To Do List - v1</title>
  <link rel="stylesheet" href="/styles.css">
  
</head>

<body>
  <div class="box" id="heading">
    <h1><%=dayvalue%></h1>
  </div>
  <!-- <h3 >Tasks: </h3> -->
  <form action="/checked" method="post">

    <div class="box taskContainer" style="overflow-y:hidden; height:400px;">

      <% for( let index = 0; index < taskArray.length; index++ ) { %>
      <div class="item">
        <input type="checkbox" name="item" onchange="this.form.submit()" value="<%=taskArray[index].name%>">
        <p>
          <%= taskArray[index].name %>
        </p>
      </div>
      <% } %>
  </form>
  </div>

  <div class="box addingTask">
    <form action="<%= routeName %>" method="post" class="item">

      <input class="textbox" type="text" name="task" placeholder="New Task" autocomplete="off">
      <button type="submit" name="list" value=<%=dayvalue%>>+</button>

    </form>
  </div>

  
  <div class="box" onclick=" window.location.href = '/manage' ">
    Manage Lists
  </div>


